{
  "name": "docx-ts",
  "version": "0.0.1",
  "description": "Convert HTML documents to docx format with header and footer.",
  "author": {
    "name": "Tom CAUFRIER",
    "email": "contact@tomcaufrier.be",
    "url": "https://tomcaufrier.be"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "tslint \"src/**/*\" --project tsconfig.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "build": "rimraf dist/ && tsc",
    "commit": "git-cz",
    "test": "jest --config jestconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "release": "npm version patch && npm publish"
  },
  "dependencies": {
    "browser-or-node": "^3.0.0",
    "jszip": "^3.10.1",
    "tslib": "^2.6.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/browser-or-node": "^1.3.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.8",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lodash": "^4.17.21",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^5.4.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomcauf/docx-ts.git"
  },
  "bugs": {
    "url": "https://github.com/tomcauf/docx-ts/issues"
  },
  "keywords": [
    "html",
    "docx",
    "typescript",
    "html-to-docx",
    "html-docx-js",
    "html-docx-ts",
    "header",
    "footer",
    "jszip",
    "browser"
  ],
  "license": "MIT"
}
